echo ""
echo "Upstream documentation:"
echo "    https://wiki.termux.com/wiki/Hardware_Keyboard"
echo ""
echo "With hardware keyboard "
echo ""
echo "    Alt + Ctrl +"
echo ""
echo "        ‘C’ → Create new session"
echo "        ‘R’ → Rename current session"
echo "        ‘M’ → Show menu"
echo "        ‘U’ → Select URL"
echo "        ‘V’ → Paste"
echo "        +/- → Adjust text size"
echo "        1-9 → Go to numbered session"
echo "        ‘K’ → Enable/Disable soft keyboard"
echo ""
echo "        Down arrow (or ‘N’) → Next session"
echo "        Up arrow (or ‘P’) → Previous session"
echo "        Right arrow → Open drawer"
echo "        Left arrow → Close drawer"
echo ""
