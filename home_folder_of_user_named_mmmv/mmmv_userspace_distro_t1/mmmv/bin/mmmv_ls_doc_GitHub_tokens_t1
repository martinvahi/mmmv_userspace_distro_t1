echo ""
echo "Command line structure as of 2022_11:"
echo ""
echo -e "\e[34m    git push \e[33mhttps://<GitHub token>@github.com/<GitHub username>/<repository name>.git +<branch name>:<branch name>\e[39m"
echo -e "    # The \"branch name\" has historically been either \"\e[33mmaster\e[39m\" or \"\e[33mmain\e[39m\","
echo "    # without the quotation marks."
echo ""
echo "A more permanent way that may leak the token with the ~/.git folder:"
echo -e "\e[34m    git remote add origin \e[33mhttps://<GitHub token>@github.com/<GitHub username>/<repository name>.git +<branch name>:<branch name>\e[39m"
echo ""
