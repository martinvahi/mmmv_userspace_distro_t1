if [ "$MMMV_PROXY_URL" == "" ]; then
    echo ""
    echo "The environment varioable MMMV_PROXY_URL has not been set."
    echo "GUID='7eb37b55-8620-4498-a549-b1e1619038e7'"
    echo ""
    exit 1
fi
if [ "$PYTHONUSERBASE" == "" ]; then
    echo ""
    echo "The Python related environment varioable PYTHONUSERBASE "
    echo "has not been set."
    echo "GUID='b735dd5e-edda-4956-9349-b1e1619038e7'"
    echo ""
    exit 1
else
    
    nice -n 5 pip3 --proxy $MMMV_PROXY_URL install --no-cache-dir  $1  --target=$PYTHONUSERBASE --upgrade
fi 

#==========================================================================
# S_VERSION_OF_THIS_FILE="3ac0e33a-59db-4f7e-b149-b1e1619038e7"
#==========================================================================
